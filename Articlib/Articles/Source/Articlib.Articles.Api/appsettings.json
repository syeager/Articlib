{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}>{Message:lj}{NewLine}{Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "formatter": "LittleByte.Logging.Formatters.PromtailFormatter, LittleByte.Logging",
          "path": "../var/log/promtail/api_articles.log",
          "restrictedToMinimumLevel": "Information",
          "shared": true
        }
      }
    ]
  },
  "ConnectionStrings": {
    "Articlib": "Server=database;Database=Articlib;Uid=dev;Pwd=pass;"
  },
  "AllowedHosts": "*"
}